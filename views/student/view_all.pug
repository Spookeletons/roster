extends ../layout

block content
    h3 Students
    a(href='/students/add') Add New Student
    table
        thead
            tr
                th First
                th Last
                th Grade level
                th
        tbody
            each student in students
                tr
                    td= student.first_name
                    td= student.last_name
                    td= student.grade_level
                    td
                        a(href=`/students/profile/${student.id}`) View Student